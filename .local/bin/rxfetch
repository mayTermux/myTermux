function help() {

  # Usage Help
  echo -e "Usage:
  rxfetch [option]
  "
  
  # Option Help
  echo -e "Options:
  ''        Run fetch script default (Logo Penguin)
  penguin   Run fetch script with Logo Penguin
  hydra     Run fetch script with Logo Hydra
  help      Print help message
  "  

}

case $1 in

  "" )
    penguin
  ;;

  penguin )
    penguin
  ;;

  hydra )
    hydra
  ;;

  * )
    help
    exit 1
  ;;

esac
