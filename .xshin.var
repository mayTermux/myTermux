lightweightpackage() {

    echo -e "\nâš™ï¸ Installing lightweight package"

    for lightweightpkg in "${lightweightpkgs[@]}"; do

        start_spinner "â€â€â€Žâ€â€â€Ž â€Žâ€â€â€Ž â€ŽðŸ“¦ $lightweightpkg"
        pkg install -y $lightweightpkg &>/dev/null

        check() {

            ipkg=$(pkg list-installed $lightweightpkg 2> /dev/null | tail -n 1)
            cpkg=${ipkg%/*}

            if [[ $cpkg == $lightweightpkg ]]; then

                stop_spinner $? || exit 1;

            else

                sleep 2
                cp "empty" > /dev/null 2>&1
                stop_spinner $?
                start_spinner "â€Žâ€Žâ€â€â€Žâ€â€â€Žâ€â€â€Ž â€Žâ€â€â€Ž â€ŽðŸ“¦ â€Ž$lightweightpkg (retrying) â€Žâ€â€â€Ž "
                pkg install -y $lightweightpkg &>/dev/null
                check
            
