        }

        check

    done

    echo -e ""
    cp -R $DIR/.scripts $HOME/.scripts &>/dev/null
    
    if [[ -f $HOME/.scripts/list-packages.sh ]]; then
    
        bash $HOME/.scripts/list-packages.sh table lightweight
    
    fi

}

